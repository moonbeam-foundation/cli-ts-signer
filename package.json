{
  "name": "cli-ts-signer",
  "version": "3.4.0",
  "description": "ts based signer for moonbeam",
  "main": "index.js",
  "repository": "git@github.com:moonsong-labs/cli-ts-signer.git",
  "author": "Alan Sapede <alan@moonsonglabs.com>",
  "license": "MIT",
  "bin": {
    "moonbeam-signer": "./dist/index.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chai": "^4.2.21",
    "@types/elliptic": "^6.4.12",
    "@types/mocha": "^9.0.0",
    "@types/node": "^15.6.1",
    "@types/prompts": "^2.0.13",
    "@types/tcp-port-used": "^1.0.0",
    "@types/yargs": "^17.0.1",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.4.1"
  },
  "scripts": {
    "postinstall": "npm run build",
    "cli": "node_modules/.bin/ts-node src/index.ts",
    "cli-binary-macos": "./moonbeam-signer-macos",
    "test": "mocha -r ts-node/register --exit 'test/**.spec.ts'",
    "test-local": "LOCAL_BUILD=true mocha -r ts-node/register --exit 'test/**.spec.ts'",
    "lint": "node_modules/.bin/prettier --check .",
    "lint:fix": "node_modules/.bin/prettier -w .",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js",
    "build-binary-deprecated": "npx @vercel/ncc build src/index.ts -o dist ; node_modules/.bin/pkg pkg.config.json",
    "build-bun:linux": "bun build --compile --target=bun-linux-x64-baseline ./src/index.ts --outfile moonbeam-signer-linux && chmod +x moonbeam-signer-linux",
    "build-bun:macos": "bun build --compile --target=bun-macos-x64 ./src/index.ts --outfile moonbeam-signer-macos && chmod +x moonbeam-signer-macos",
    "build-bun:windows": "bun build --compile --target=bun-win-x64 ./src/index.ts --outfile moonbeam-signer-win.exe && chmod +x moonbeam-signer-win.exe",
    "build-standalone": "npm run build-bun:linux && npm run build-bun:macos && npm run build-bun:windows"
  },
  "dependencies": {
    "@moonbeam-network/api-augment": "0.3600.0",
    "@polkadot/api": "15.9.1",
    "@polkadot/api-derive": "15.9.1",
    "@polkadot/keyring": "13.4.3",
    "@polkadot/rpc-provider": "15.9.1",
    "@polkadot/types": "15.9.1",
    "@polkadot/types-codec": "15.9.1",
    "@polkadot/util": "13.4.3",
    "@polkadot/util-crypto": "13.4.3",
    "chalk": "^4.1.2",
    "child_process": "^1.0.2",
    "elliptic": "^6.5.4",
    "moonbeam-tools": "^0.0.49",
    "ncc": "^0.3.6",
    "pkg": "^5.8.0",
    "prompts": "^2.4.1",
    "tcp-port-used": "^1.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5",
    "web3": "^1.6.1",
    "wtfnode": "^0.9.1",
    "yargs": "^17.7.2"
  },
  "overrides": {
    "@polkadot/api": "$@polkadot/api",
    "@polkadot/api-derive": "$@polkadot/api",
    "@polkadot/api-augment": "$@polkadot/api",
    "@polkadot/api-base": "$@polkadot/api",
    "@polkadot/rpc-augment": "$@polkadot/api",
    "@polkadot/rpc-core": "$@polkadot/api",
    "@polkadot/rpc-provider": "$@polkadot/api",
    "@polkadot/types-create": "$@polkadot/api",
    "@polkadot/types-augment": "$@polkadot/api",
    "@polkadot/types-support": "$@polkadot/api",
    "@polkadot/types-codec": "$@polkadot/api",
    "@polkadot/types": "$@polkadot/api",
    "@polkadot/types-known": "$@polkadot/api",
    "@polkadot/util": "$@polkadot/util",
    "@polkadot/util-crypto": "$@polkadot/util-crypto"
  },
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}
